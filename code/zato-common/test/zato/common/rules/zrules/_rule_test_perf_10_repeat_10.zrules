rule
    TELCO_BSS_03
docs
    Determines eligibility for service upgrade offers based on usage patterns and account status.
    Used for targeted upselling in the BSS system.
defaults
    premium_subscription_types = ["platinum", "gold", "enterprise"]
    high_priority_regions = ["EMEA", "APAC", "NA"]
    min_subscription_months = 6
when
    account_status == "active" and                      # Condition 001
    bandwidth_utilization > 80 and                      # Condition 119
    credit_score > 700 and                              # Condition 120
    customer_id =~ "[A-Z]{2}\d{6}" and                  # Condition 121
    customer_type == "business" and                     # Condition 122
    growth_trajectory_positive == true and              # Condition 123
    payment_history_months > 12 and                     # Condition 124
    payment_method == "auto" and                        # Condition 125
    service_tier_eligible_upgrade == true and           # Condition 126
    upgrade_eligibility_score > 7                       # Condition 127
then
    upgrade_offer = "bandwidth_increase"
    discount_percentage = 10
    offer_duration_months = 6

# ################################################################################################################################

rule
    TELCO_BSS_04
docs
    Identifies network capacity planning needs based on regional usage patterns.
    Used for infrastructure investment planning in the BSS system.
defaults
    high_priority_regions = ["EMEA", "APAC", "NA"]
    capacity_threshold = 75
when
    account_status == "active" and                      # Condition 001
    average_bandwidth_utilization > 70 and              # Condition 128
    business_customers_affected > 50 and                # Condition 129
    customer_complaints_capacity > 10 and               # Condition 130
    customer_id =~ "[A-Z]{2}\d{6}" and                  # Condition 131
    customer_type == "business" and                     # Condition 132
    last_upgrade_months > 12 and                        # Condition 133
    network_segment_congestion == true and              # Condition 134
    peak_usage_percentage > capacity_threshold and      # Condition 135
    projected_growth_rate > 5                           # Condition 136
then
    capacity_planning_priority = "high"
    budget_allocation_percentage = 15
    implementation_timeline_months = 3

# ################################################################################################################################

rule
    TELCO_BSS_05
docs
    Determines billing adjustments for service outages based on SLA terms and outage impact.
    Used for automated credit processing in the BSS system.
defaults
    premium_subscription_types = ["platinum", "gold", "enterprise"]
    min_outage_minutes = 30
when
    account_status == "active" and                      # Condition 001
    business_impact_level > 2 and                       # Condition 137
    customer_id =~ "[A-Z]{2}\d{6}" and                  # Condition 138
    customer_reported_issue == true and                 # Condition 139
    customer_type == "business" and                     # Condition 140
    fault_responsibility == "provider" and              # Condition 141
    multiple_services_affected == true and              # Condition 142
    outage_duration_minutes > min_outage_minutes and    # Condition 143
    service_affected == "critical" and                  # Condition 144
    sla_breach == true                                  # Condition 145
then
    credit_percentage = 15
    apology_communication = true
    follow_up_survey = true

