# ################################################################################################################################

rule
    TELCO_BSS_01
docs
    Determines if a customer is eligible for premium support based on subscription type and history.
    Used for prioritizing customer support tickets in the BSS system.
defaults
    min_subscription_months = 6
    premium_subscription_types = ["platinum", "gold", "enterprise"]
    high_priority_regions = ["EMEA", "APAC", "NA"]
when
    account_status == "active" and                      # Condition 001
    customer_id =~ "[A-Z]{2}\d{6}" and                  # Condition 002
    customer_type == "business" and                     # Condition 003
    average_response_time_history < 4 and               # Condition 101
    critical_business_process == true and               # Condition 102
    dedicated_support_eligible == true and              # Condition 103
    is_contract_signed == true and                      # Condition 104
    priority_support_eligible == true and               # Condition 105
    service_level == "premium" and                      # Condition 106
    support_tickets_open < 5                            # Condition 107
then
    support_priority = "high"
    response_time_hours = 2
    dedicated_agent = true

# ################################################################################################################################

rule
    TELCO_BSS_02
docs
    Identifies customers at risk of churn based on usage patterns and billing history.
    Used for proactive retention campaigns in the BSS system.
defaults
    min_subscription_months = 6
    high_risk_threshold = 3
    premium_subscription_types = ["platinum", "gold", "enterprise"]
when
    account_status == "active" and                      # Condition 001
    customer_id =~ "[A-Z]{2}\d{6}" and                  # Condition 002
    customer_type == "business" and                     # Condition 003
    billing_complaints > 0 and                          # Condition 108
    churn_prediction_score > 0.7 and                    # Condition 109
    competitor_mentions_support > 0 and                 # Condition 110
    contract_end_days < 60 and                          # Condition 111
    retention_score < 6 and                             # Condition 112
    satisfaction_score < 7 and                          # Condition 113
    usage_decline_months >= high_risk_threshold         # Condition 114
then
    churn_risk = "high"
    retention_action = "executive_outreach"
    offer_discount = 15

